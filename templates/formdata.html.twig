{% extends 'partials/base.html.twig' %}

{% if form is null %}
  {% set form = grav.session.getFlashObject('form') %}
{% endif  %}

{% block content %}
  <div class="container">
    <div class="card">
      <div class="content">
        {% if form %}
          {% if form.message %}
            <div class="message focus">{{ form.message }}</div>
          {% endif %}

          <h2>{{ page.title }}</h2>
          {{ page.content }}

          {% include "forms/data.html.twig" %}
        {% else %}
          <div class="message warning"><p>{{ 'THEME_PLUSPUNKT.NO_FORM_DATA'|t }}</p></div>
        {% endif %}
      </div>
      <div class="actions content">
        <a href="{{ base_url_absolute }}">
          {{ 'THEME_PLUSPUNKT.HOME'|t }}
        </a>
      </div>
    </div>
  </div>
{% endblock %}
